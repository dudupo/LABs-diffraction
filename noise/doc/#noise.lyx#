\begin_layout Standard
ולכן אנו מצפים למצוא את קבוע בולצמן בטווח: 
\begin_inset Formula 
\begin{align*}
k= & \frac{\left\langle V^{2}\right\rangle }{4\left(G\pm\Delta G\right)\left(T\pm\Delta T\right)\left(R\pm\Delta R\right)}=\\
 & \sim\frac{\left\langle V^{2}\right\rangle }{4GTR}\left(1\pm\frac{\Delta G}{G}\pm\frac{\Delta T}{T}\pm\frac{\Delta R}{R}\right)\\
 & \sim\frac{\left\langle V^{2}\right\rangle }{4GTR}\left(1\pm\frac{\Delta R}{R}\pm\left(\frac{\Delta C}{C}\right)^{2}\pm\frac{\Delta T}{T}\right.\\
 & \ \ \ \ \ \ \ \ \ \ \ \ \ \ \ \left.\pm\frac{6}{\sqrt{5}}10^{-3}\cdot\frac{\int_{Width}\frac{g\left(\nu\right)}{1+\left(2\pi\nu\cdot CR\right)^{2}}}{\int_{Width}\frac{g^{2}\left(\nu\right)}{1+\left(2\pi\nu\cdot CR\right)^{2}}}\right)
\end{align*}

